@model ECommerce.Model.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}


<html lang="en">
<head>
    <partial name="_HeaderPartial" />

</head>
<body class="bg-gray-100 font-bold text-black work-sans leading-normal text-base tracking-normal">
    <!--Nav-->
    <partial name="_NavPartial" />


    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <partial name="_NotificationPartial" />
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
            <h2 class="text-center text-2xl font-semibold text-gray-900">Sign in to your account</h2>

            <form asp-action="SaveLogin" asp-controller="Account" class="mt-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

                <!-- Email -->
                <div class="mt-6">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700"> </label>
                    <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                    <span asp-validation-for="Email" class="text-red-500"></span>
                </div>

                <!-- Password -->
                <div class="mt-6">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                    <span asp-validation-for="Password" class="text-red-500"></span>
                </div>

                <!-- Forgot password link -->
                <div class="mt-4 flex justify-end">
                    <a href="#" class="text-sm font-medium text-teal-500 hover:text-teal-400">Forgot password?</a>
                </div>

                <div class="flex items-center h-5">
                    <label class="text-sm font-medium text-teal-500 mr-2 " asp-for="RememberMe"></label>
                    <input asp-for="RememberMe"  class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-teal-400 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800" />
                </div>

                <!-- Sign In Button -->
                <div class="mt-6">
                    <button  type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-500 hover:bg-teal-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                        Sign in
                    </button>
                </div>

                <!-- Sign up link -->
                <div class="mt-6 text-center">
                    <p class="text-sm text-gray-600">Not a member? <a asp-controller="Account" asp-action="Register" class="font-medium text-teal-500 hover:text-teal-400">Create An Account Here</a></p>
                </div>
            </form>
        </div>
    </div>

</body>
</html>