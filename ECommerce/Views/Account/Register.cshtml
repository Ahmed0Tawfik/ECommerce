@model FirstMVC.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}



<html lang="en">
<head>
    <partial name="_HeaderPartial" />

</head>
<body class="bg-gray-100 font-bold text-black work-sans leading-normal text-base tracking-normal">
    <!--Nav-->
    <partial name="_NavPartial" />

    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <partial name="_NotificationPartial" />
        <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
            <h2 class="text-center text-2xl font-semibold text-gray-900">Create Your Account</h2>

            <form asp-action="SaveRegister" asp-controller="Account" class="mt-6">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <!-- First Name -->
                    <div>
                        <label asp-for="FName" class="block text-sm font-medium text-gray-700">First name</label>
                        <input asp-for="FName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                        <span asp-validation-for="FName" class="text-red-500"></span>
                    </div>

                    <!-- Last Name -->
                    <div>
                        <label asp-for="LName" class="block text-sm font-medium text-gray-700">Last name</label>
                        <input asp-for="LName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                        <span asp-validation-for="LName" class="text-red-500"></span>
                    </div>
                </div>



                <!-- Email -->
                <div class="mt-6">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email </label>
                    <input asp-for="Email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                    <span asp-validation-for="Email" class="text-red-500"></span>
                </div>

                <div class="mt-6">
                    <label asp-for="UserName" class="block text-sm font-medium text-gray-700">Username </label>
                    <input asp-for="UserName" name="username" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                    <span asp-validation-for="UserName" class="text-red-500"></span>
                </div>

                <!-- Password -->
                <div class="mt-6">
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                    <input asp-for="Password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                    <span asp-validation-for="Password" class="text-red-500"></span>
                </div>

                <!-- Confirm Password -->
                <div class="mt-6">
                    <label asp-for="ConfirmedPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                    <input asp-for="ConfirmedPassword" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                    <span asp-validation-for="ConfirmedPassword" class="text-red-500"></span>
                </div>

                <div class="mt-6">
                    <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700">Phone</label>
                    <input asp-for="PhoneNumber" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-teal-500 focus:ring-teal-500 sm:text-sm" />
                    <span asp-validation-for="PhoneNumber" class="text-red-500"></span>
                </div>

                <!-- Submit Button -->
                <div class="mt-6">
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-teal-500 hover:bg-teal-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                        Sign up
                    </button>
                </div>

                <div class="mt-6 text-center">
                    <p class="text-sm text-gray-600">Already Have An Account? <a asp-controller="Account" asp-action="Login" class="font-medium text-teal-500 hover:text-teal-400">Sign in</a></p>
                </div>
            </form>
        </div>
    </div>




</body>
</html>