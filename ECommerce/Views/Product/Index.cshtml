@using System.Security.Policy
@model ECommerce.Model.ViewModels.ProductListViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}



<html lang="en">
<head>
    <partial name="_HeaderPartial" />


</head>
<body class="bg-gray-100 font-bold text-black work-sans leading-normal text-base tracking-normal">
    <!--Nav-->
    <partial name="_NavPartial" />

    <section class="bg-white py-8">
        <partial name="_NotificationPartial" />
        <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">

            <nav id="store" class="w-full z-30 top-0 px-6 py-1">
                <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 px-2 py-3">

                    <a class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-xl " >All Products</a>


                </div>
            </nav>

            <div class="w-full flex flex-wrap justify-center ">
                @foreach(var Product in Model.Products)
                {
                <a asp-route-id="@Product.ID" asp-controller="Product" asp-action="Details" class="border-gray-50  border-4 border-spacing-10 m-6 w-96 py-8 px-8 bg-white rounded-xl shadow-xl hover:shadow-2xl">
                    <img class="rounded-lg w-full h-80 object-cover" src="~/public/image/@Product.ImageUrl">
                    <div class="pt-5 flex items-center justify-between">
                        <p class="text-2xl font-semibold text-black">@Product.Name</p>
                        <p class="text-lg font-semibold text-gray-500">In Stock: @Product.Stock</p>
                    </div>
                    <p class="pt-2 text-teal-600 text-lg">$@Product.Price</p>
                </a>
                }

            </div>


        </div>
        <div class="flex justify-center mt-6">
            <nav aria-label="Pagination">
                <ul class="flex items-center space-x-2">
                    <!-- Previous Button -->
                    @if (Model.HasPreviousPage)
                    {
                        <li>
                            <a class="block px-4 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100"
                               href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">
                                Previous
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <span class="block px-4 py-2 text-sm text-gray-500 bg-white border border-gray-300 rounded-lg cursor-not-allowed opacity-50">
                                Previous
                            </span>
                        </li>
                    }

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        if (i == Model.CurrentPage)
                        {
                            <li>
                                <span class="block px-4 py-2 text-sm text-white bg-teal-500 border border-teal-500 rounded-lg">
                                    @i
                                </span>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a class="block px-4 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100"
                                   href="@Url.Action("Index", new { page = i })">@i</a>
                            </li>
                        }
                    }

                    <!-- Next Page Link -->
                    @if (Model.HasNextPage)
                    {
                        <li>
                            <a class="block px-4 py-2 text-sm text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100"
                               href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">
                                Next
                            </a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <span class="block px-4 py-2 text-sm text-gray-500 bg-white border border-gray-300 rounded-lg cursor-not-allowed opacity-50">
                                Next
                            </span>
                        </li>
                    }


                </ul>

            </nav>
        </div>


    </section>







   <partial name="_FooterPartial" />



</body>
</html>

