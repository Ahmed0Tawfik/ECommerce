@using ECommerce.Model.ViewModels
@model ProductListViewModel

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_SubPageLayout.cshtml";
}



@section h2prod {
    <h2>
        Featured Products
    </h2>
}
@section FeaturedProducts {

    @foreach (var Product in Model.Products)
    {
        <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
            <div class="card product-card">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Product.ID">
                    <img src="~/images/@Product.ImageUrl" alt="Product Image" class="card-img-top product-image">

                </a>
                <div class="product-info">
                    <h5 class="card-title">@Product.Name</h5>
                    <p class="product-price">$@Product.Price</p>
                </div>
            </div>
        </div>
    }

    <div>
}

@section Navigation{

        <nav aria-label="Page navigation">
            <ul class="pagination">

                <!-- Previous Page Link -->
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">
                            Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Previous</span>
                    </li>
                }

                <!-- Page Numbers -->
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <span class="page-link">@i</span>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                        </li>
                    }
                }

                <!-- Next Page Link -->
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">
                            Next
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Next</span>
                    </li>
                }
            </ul>
        </nav>
    </div>
}